generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
id Int @id @default(autoincrement())
title String
image String
category String
cards Card[]
}

model Card{
  id Int @id @default(autoincrement())
  title String
  image String
  description String
  author String
  boardId Int
  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
}
